<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="LoginController"
            prefWidth="400" prefHeight="300">

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300">
   <children>
      <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
         <children>
            <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <TextField fx:id="usernameField" promptText="Username" prefWidth="300"/>

            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>

            <Button text="Login" fx:id="loginButton" prefWidth="300"/>

            <Hyperlink fx:id="createAccountLink" text="Create an account" />

            <Label fx:id="errorLabel" textFill="red" visible="false" />
         </children>
      </VBox>
   </children>
</AnchorPane>
